<div class="row">
  <div class="col-11 offset-md-1">
    <p id="notice"><%= notice %></p>

    <h1>Catagories</h1>

    <%= link_to 'New Catagory', new_catagory_path, class: 'btn btn-primary' %>
    <br><br>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Title</th>
          <th>Slug</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @catagories.each do |catagory| %>
          <tr>
            <td><%= catagory.title %></td>
            <td><%= catagory.slug %></td>
            <td><%= link_to 'Show', catagory %></td>
            <td><%= link_to 'Edit', edit_catagory_path(catagory) %></td>
            <td><%= link_to 'Destroy', catagory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
  </div>
</div>